
<launch>
  <machine name="hinotoritz_fac" address="192.168.100.180" env-loader="/root/ros/devel/env.sh" user="root" password="root"  />
  <machine name="hinotoritz" address="192.168.100.188" env-loader="/root/ros/devel/env.sh" user="hinotoritz" password="hinotoritz"  />

  <node pkg = "necst-core"
        name = "pc_status"
        type = "pc_status.py"
        required="true"
        output="screen"
        machine="hinotoritz_fac">
    <remap from = '/pc_status/cpu' to = '/core/pc_status/hinotoritz_fac/cpu'/>
    <remap from = '/pc_status/mem' to = '/core/pc_status/hinotoritz_fac/mem'/>
    <remap from = '/pc_status/disk' to = '/core/pc_status/hinotoritz_fac/disk'/>
    <remap from = '/pc_status/login' to = '/core/pc_status/hinotoritz_fac/login'/>
    <remap from = '/pc_status/proc' to = '/core/pc_status/hinotoritz_fac/proc'/>

  </node>

  <node pkg = "necst-core"
        name = "pc_status"
        type = "pc_status.py"
        required="true"
        output="screen"
        machine="hinotoritz">
    <remap from = '/pc_status/cpu' to = '/core/pc_status/hinotoritz/cpu'/>
    <remap from = '/pc_status/mem' to = '/core/pc_status/hinotoritz/mem'/>
    <remap from = '/pc_status/disk' to = '/core/pc_status/hinotoritz/disk'/>
    <remap from = '/pc_status/login' to = '/core/pc_status/hinotoritz/login'/>
    <remap from = '/pc_status/proc' to = '/core/pc_status/hinotoritz/proc'/>

  </node>
</launch>
